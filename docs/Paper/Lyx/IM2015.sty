% redefine sectioning
%------------------------------------------------------------------------------
\renewcommand \thesection {\Roman{section}.}
\makeatletter
    \renewcommand{\section}{\@startsection{section}{1}{0mm}
       {\baselineskip}%
       {\baselineskip}%
       {\bf\normalsize\centering\uppercase}}%
\makeatother

\renewcommand \thesubsection {\Alph{subsection}.}
\makeatletter
    \renewcommand{\subsection}{\@startsection{subsection}{2}{0mm}
       {\baselineskip}%
       {\baselineskip}%
       {\noindent\normalsize\textit}}%
\makeatother

\renewcommand{\thesubsubsection}{\arabic{subsubsection})}
\renewcommand{\subsubsection}[1]{%
 \refstepcounter{subsubsection}% manually increment the chapter number
 \def\tempa{}%
 \def\tempb{#1}
 \ifx\tempa\tempb
    \textit{\thesubsubsection~}%
 \else
    \textit{\thesubsubsection~#1:~}%
 \fi
}

\renewenvironment{abstract}{\noindent\textit{\textbf{Abstract~--~}}}{}%
\newenvironment{keywords}{\vspace{\baselineskip}\noindent\textit{Keywords~--~}}{}%

% redefine labeling
%------------------------------------------------------------------------------
\makeatletter
\def\@maketitle{%
  \newpage
  \null
  \vskip -2em%
  \begin{center}%
  \let \footnote \thanks
    {\LARGE \@title \par}%
    \vskip 1.5em%
    {\large
      \lineskip .5em%
      \begin{tabular}[t]{c}%
        \@author
      \end{tabular}\par}%
    \vskip 1em%
    {\large \@date}%
  \end{center}%
  \par
  \vskip 1.5em}
\makeatother

\makeatletter
    \renewcommand{\title}[1]{\gdef\@title{\reset@font\Large\bfseries\uppercase{ #1}}}
\makeatother

\newcommand{\authorinfo}[2]{\normalsize\footnotemark[#1] #2}

